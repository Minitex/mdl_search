<div class="filter-form">
<%= bootstrap_form_for [exhibit, filter], layout: :horizontal, label_col: 'col-md-2', control_col: 'col-md-10', html: {class: "row"} do |f| %>
  <%= f.text_field :field %>
  <%= f.text_field :value %>
  <%= hidden_field_tag :tab, 'filter' %>

  <div class="form-actions">
    <div class="primary-actions">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</div>
