<div class="indexing">
  <h1>Indexing</h1>
  <p>Index records by collection and date</p>

  <%= form_with url: '/indexing', class: 'form-horizontal' do |form| %>
    <div class="form-group row">
      <%= form.label :collection, class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= form.select :collection, @collections, { prompt: '- choose -' }, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'Changed since', class: 'col-sm-2 control-label' %>
      <div class="col-sm-3 mr-sm-3">
        <%= form.date_field :date, max: Date.current, aria: { describedby: 'date-help-text' } %>
      </div>
      <small id="date-help-text" class="text-muted">
        Leave blank to index without any date restriction.
      </small>
    </div>
    <%= form.submit 'Start', class: 'btn btn-primary' %>
  <% end %>
</div>
