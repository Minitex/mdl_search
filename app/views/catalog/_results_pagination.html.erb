<% show_json_link ||= false %>
<% if show_pagination? and @response.total_pages > 1 %>
 <div class="row record-padding">
  <div class="col-md-12">
    <div class="pagination">
      <%= paginate @response, :outer_window => 2, :theme => 'blacklight' %>
    </div>
    <%= json_result_link if show_json_link %>
  </div>
 </div>
<% else %>
  <%= json_result_link if show_json_link %>
<% end %>
