<% if js != true %>
  <div id="full-record-seadragon"><script type="text/javascript">
    OpenSeadragon({
        id:            "full-record-seadragon",
        prefixUrl:     "/assets/",
        tileSources:   [{
            type: 'image',
            url:  '<%= "#{ENV['RAILS_ROOT_URL']}/contentdm-images?id=#{item.collection}:#{item.id}" %>'
        }]
    });
  </script></div>
