<div class="addthis_inline_share_toolbox"></div>
  <%= link_to(
    "Browse the #{@document.contributing_organization} collection",
    @document.collection_url,
    class: 'btn btn-primary'
  ) %>
  <div id="item-add-to-list-root" attr-document-id="<%= @document.id %>"></div>
<% unless @document.more_like_this.empty? %>
  <div class="card panel-default more-like-this">
    <div class="card-header">Related Items</div>
    <div class="card-body">
      <%= render(collection: @document.more_like_this, partial: 'show_more_like_this', as: :doc) %>
    </div>
  </div>
<% end %>

<%= json_page_link %>

<% content_for(:webpack_bundles) do %>
  <%= javascript_pack_tag 'itemAddToList' %>
<% end %>
