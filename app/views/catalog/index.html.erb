<div id="content" class="col-md-12 col-sm-12 col-lg-9 col-lg-push-3 <%= main_content_classes %>">
  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render 'home' %>
    <%= render 'shared/sitelinks_search_box' %>
  <% else %>
    <%= render 'search_results' %>
  <% end %>
</div>

<div id="sidebar" class="col-md-12 col-sm-12 col-lg-3 col-lg-pull-9 <%= sidebar_classes %>">
  <%= render 'search_sidebar' %>
</div>