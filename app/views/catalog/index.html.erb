<% if has_search_parameters? %>
<div id="content" class="col-md-12 col-sm-12 col-lg-9 col-lg-push-3">
  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render 'home' %>
    <%= render 'shared/sitelinks_search_box' %>
  <% else %>
    <%= render 'search_results' %>
  <% end %>
</div>

<div id="sidebar" class="col-md-12 col-sm-12 col-lg-3 col-lg-pull-9">
  <%= render 'search_sidebar' %>
</div>
<% else %>
  <style type="text/css">
    .navbar .search-query-form {
      display: none;
    }
  </style>
  <div class="row home-page">
    <div class="">
      <div class="col-md-12">
        <div class="home-panel-wrapper">
          <div class="home-panel">
            <div class="home-wrapper">
              <div id="home-search">
                <%= render_search_bar  %>
              </div>
              <div class="home-desc">
                <strong><%= record_count %></strong> items from <strong><%= facet_count('contributing_organization_ssi') %></strong>
                historical societies, libraries, archives, and cultural organizations across Minnesota
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-12">
        <%= render_facet_partials ['collection_name_ssi'] %>
      </div>
      <div class="col-lg-4 col-md-12">
        <%= render_facet_partials ['topic_ssim'] %>
      </div>
      <div class="col-lg-4 col-md-12">
        <%= render_facet_partials ['physical_format_ssi'] %>
      </div>
    </div>
  </div>
<% end %>